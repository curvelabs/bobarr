ENV=development

TZ=Europe/Paris
UMASK_SET=0002

# User/group IDs for container file permissions
PUID=1000
PGID=1000

# Database settings
POSTGRES_DB=bobarr
POSTGRES_USER=bobarr
POSTGRES_PASSWORD=bobarr

# Redis settings
REDIS_PASSWORD=bobarr

# Search timeouts
JACKETT_AUTOMATIC_SEARCH_TIMEOUT=120000
JACKETT_MANUAL_SEARCH_TIMEOUT=15000

# Library folder names
LIBRARY_MOVIES_FOLDER_NAME=movies
LIBRARY_TV_SHOWS_FOLDER_NAME=tvshows

# Debug settings
DEBUG_REDIS=false

# AI API Keys (for agentic layer)
ANTHROPIC_API_KEY=
